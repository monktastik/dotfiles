et nocompatible // Changes so the arrowkeys go up and down rather t                han insert ABCD
set tabstop=2 //sets the number of cells shifted by a tab in insert to                  2
set shiftwidth=2 //sets the spaces indented with > command to 2
set number // displays line numbers
set ls=2 // displays status line
set ruler // displays exact position of cursor on bottom left or                     status line and percentage in buffer
set history=50 // command history remembers up to 50 commands
set backspace=indent,eol,start // backspace will delete more than                                         characters added in immediate insert                                    session ie. previous characters,                                        line breaks, indents.
set bg=light // changes background lighting which I only noticed on                     numbers
set backup // allows backup
set backupdir=~/.backup //chooses directory for backup
set directory=~/.vimswap // does vimswap

